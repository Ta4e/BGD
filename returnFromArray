<script>
function getResults (type) {
let even = [];
let notEven =[];
let symbols = [];
let answer;
for (let i = 0; i < mas.length; i++) {
	if (0 == (mas[i] % 2) && mas[i] != 0) {
		even.push(mas[i]);
	}
	if (1 == (mas[i] % 2)) {
 		  notEven.push(mas[i]);
 	} 
 	if (isNaN(mas[i])) {
 		symbols.push(mas[i]);
 	}
}
if (even.length == 0 || notEven.length == 0 || symbols.length == 0) {
	if (even.length == 0) {
		even = null;
	}
	if (notEven.length == 0) {
		notEven = null;
	}
	if (symbols.length == 0) {
		symbols = null;
	}
}
if (type == 1) {
	answer = ("Even numeric from array: " + even + ".");
}
if (type == 2) {
	answer = ("Not even numeric from array: " + notEven + ".");
}
if (type == 3) {
	answer = ("Symbols from array: " + symbols + ".");
}
return answer;
}

let mas = [];
while (true) {
	mas.push(prompt('Add word or number, to array.'));
	let ans = confirm("Next one?");
		if (ans == true) {
		} else if (ans == false) {
			//alert(mas); //for debug
			break;
		}
}
let ans = parseInt(+prompt('Inter 1 for even output.\nInter 2 for not even output.\nInter 3 for symbols output.'));
while (ans < 1 || ans > 3 || isNaN(ans)) {
	ans = parseInt(+prompt('You insert wrong values.\nInter 1 for even output.\nInter 2 for not even output.\nInter 3 for symbols output.'));
}
if (ans == 1 || ans == 2 || ans == 3) {
	alert(getResults(ans));
}
</script>		
